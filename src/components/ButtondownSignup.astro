---
interface Props {
  heading?: string;
  description?: string;
  buttonText?: string;
  variant?: 'default' | 'compact';
}

const {
  heading = 'Stay in the Loop',
  description = 'Subscribe to our newsletter for upcoming events and news.',
  buttonText = 'Subscribe',
  variant = 'default',
} = Astro.props;
---

<div class:list={['signup-form', variant]}>
  {variant === 'default' && (
    <>
      <h3 class="signup-heading">{heading}</h3>
      <p class="signup-description">{description}</p>
    </>
  )}
  <form
    action="https://buttondown.com/api/emails/embed-subscribe/Couzteau"
    method="post"
    target="popupwindow"
    class="embeddable-buttondown-form"
  >
    <div class="form-row">
      <input
        type="email"
        name="email"
        placeholder="Enter your email"
        required
        aria-label="Email address"
      />
      <button type="submit" class="btn">{buttonText}</button>
    </div>
    <p class="signup-note">We respect your privacy. Unsubscribe anytime.</p>
  </form>
</div>

<style>
  .signup-form {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: var(--spacing-xl);
    text-align: center;
  }

  .signup-form.compact {
    padding: var(--spacing-md);
  }

  .signup-heading {
    margin: 0 0 var(--spacing-sm);
  }

  .signup-description {
    color: var(--color-text-muted);
    margin: 0 0 var(--spacing-lg);
    font-family: var(--font-serif);
    font-weight: 300;
    font-style: normal;
  }

  .form-row {
    display: flex;
    gap: var(--spacing-sm);
    max-width: 400px;
    margin: 0 auto;
  }

  input[type="email"] {
    flex: 1;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    font-size: 1rem;
    font-family: var(--font-ui);
  }

  input[type="email"]:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .signup-note {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: var(--spacing-sm) 0 0;
    font-family: var(--font-serif);
    font-weight: 300;
    font-style: normal;
  }

  .compact .signup-note {
    display: none;
  }

  @media (max-width: 480px) {
    .form-row {
      flex-direction: column;
    }
  }
</style>

---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Engine 43</h3>
        <p>A historic firehouse turned vibrant community venue.</p>
      </div>
      <div class="footer-section">
        <h4>Quick Links</h4>
        <ul>
          <li><a href="/events">Upcoming Events</a></li>
          <li><a href="/history">Our History</a></li>
          <li><a href="/project">Projects</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h4>Visit Us</h4>
        <p>Engine 43<br />San Francisco, CA</p>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {currentYear} Engine 43. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--footer-bg);
    color: var(--footer-text);
    padding: var(--spacing-2xl) 0 var(--spacing-lg);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }

  .footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .footer-section h4 {
    font-size: 1rem;
    margin-bottom: var(--spacing-sm);
    font-family: var(--font-serif);
    font-weight: var(--description-weight);
    font-style: var(--description-style);
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: var(--spacing-xs);
  }

  .footer-section a {
    color: var(--footer-text);
    opacity: 0.8;
    font-family: var(--font-serif);
    font-weight: var(--description-weight);
    font-style: var(--description-style);
  }

  .footer-section a:hover {
    opacity: 1;
  }

  .footer-section p {
    opacity: 0.8;
    margin: 0;
    font-family: var(--font-serif);
    font-weight: var(--description-weight);
    font-style: var(--description-style);
  }

  .footer-bottom {
    border-top: 1px solid currentColor;
    border-top-color: color-mix(in srgb, var(--footer-text) 20%, transparent);
    padding-top: var(--spacing-lg);
    text-align: center;
  }

  .footer-bottom p {
    margin: 0;
    opacity: 0.6;
    font-size: 0.875rem;
    font-family: var(--font-serif);
    font-weight: var(--description-weight);
    font-style: var(--description-style);
  }
</style>

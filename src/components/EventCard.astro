---
interface Props {
  title: string;
  date: Date;
  time?: string;
  description: string;
  image?: string;
  location?: string;
  slug: string;
}

const { title, date, time, description, image, location = 'Engine 43', slug } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="event-card card">
  <div class="event-content">
    <span class="event-date">{formattedDate}{time && `, ${time}`}</span>
    <h3 class="event-title">{title}</h3>
    <p class="event-description">{description}</p>
  </div>
  {image && (
    <div class="event-image">
      <img src={image} alt={title} loading="lazy" />
    </div>
  )}
</article>

<style>
  .event-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    overflow: hidden;
    padding: 0;
  }

  .event-image {
    display: flex;
    align-items: center;
  }

  .event-image img {
    width: 100%;
    height: auto;
  }

  .event-content {
    padding: var(--spacing-lg);
  }

  @media (max-width: 600px) {
    .event-card {
      grid-template-columns: 1fr;
    }

    .event-content {
      order: 1;
    }

    .event-image {
      order: 2;
    }
  }

  .event-date {
    display: inline-block;
    background-color: var(--color-secondary);
    color: white;
    padding: 4px 12px;
    font-family: var(--font-ui);
    font-size: 0.8125rem;
    letter-spacing: 0.02em;
    border-radius: 2px;
    margin-bottom: var(--spacing-sm);
  }

  .event-title {
    margin: 0 0 var(--spacing-xs);
    font-size: 1.25rem;
    font-family: var(--font-display);
    font-weight: var(--heading-weight);
    font-style: var(--heading-style);
    text-transform: none;
    letter-spacing: 0;
    color: var(--color-text);
  }

  .event-description {
    margin: 0;
    color: var(--color-text-muted);
    font-family: var(--font-serif);
    font-weight: var(--description-weight);
    font-style: var(--description-style);
  }
</style>

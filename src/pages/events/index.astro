---
import BaseLayout from '../../layouts/BaseLayout.astro';
import EventCard from '../../components/EventCard.astro';
import { getCollection } from 'astro:content';

const allEvents = await getCollection('events');
const now = new Date();
now.setHours(0, 0, 0, 0);

const upcomingEvents = allEvents
  .filter(event => event.data.date >= now)
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime());
---

<BaseLayout title="Upcoming Events" description="Check out upcoming events at Engine 43">
  <section class="hero-small">
    <div class="container">
      <h1>Upcoming Events</h1>
      <p>Discover what's happening at Engine 43</p>
    </div>
  </section>

  <section class="section section-hero-flipped">
    <div class="container">
      <div class="events-nav">
        <a href="/events" class="events-tab active">Upcoming</a>
        <a href="/events/past" class="events-tab">Past Events</a>
      </div>

      {upcomingEvents.length > 0 ? (
        <div class="events-list">
          {upcomingEvents.map(event => (
            <EventCard
              title={event.data.title}
              date={event.data.date}
              time={event.data.time}
              description={event.data.description}
              image={event.data.image}
              location={event.data.location}
              slug={event.slug}
            />
          ))}
        </div>
      ) : (
        <div class="empty-state card">
          <h3>No Upcoming Events</h3>
          <p class="text-muted">We're planning something special. Check back soon or subscribe to our newsletter!</p>
          <a href="/#signup" class="btn">Subscribe for Updates</a>
        </div>
      )}
    </div>
  </section>
</BaseLayout>


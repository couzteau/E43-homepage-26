---
import BaseLayout from '../../layouts/BaseLayout.astro';
import EventCard from '../../components/EventCard.astro';
import { getCollection } from 'astro:content';

const allEvents = await getCollection('events');
const now = new Date();
now.setHours(0, 0, 0, 0);

const pastEvents = allEvents
  .filter(event => event.data.date < now)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title="Past Events" description="Browse past events at Engine 43">
  <section class="hero-small">
    <div class="container">
      <h1>Past Events</h1>
      <p>A look back at what we've hosted at Engine 43</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="events-nav">
        <a href="/events" class="events-tab">Upcoming</a>
        <a href="/events/past" class="events-tab active">Past Events</a>
      </div>

      {pastEvents.length > 0 ? (
        <div class="events-list">
          {pastEvents.map(event => (
            <EventCard
              title={event.data.title}
              date={event.data.date}
              time={event.data.time}
              description={event.data.description}
              image={event.data.image}
              location={event.data.location}
              slug={event.slug}
            />
          ))}
        </div>
      ) : (
        <div class="empty-state card">
          <h3>No Past Events Yet</h3>
          <p class="text-muted">Check out our upcoming events to see what's happening soon!</p>
          <a href="/events" class="btn">View Upcoming Events</a>
        </div>
      )}
    </div>
  </section>
</BaseLayout>


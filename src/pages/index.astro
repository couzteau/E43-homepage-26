---
import BaseLayout from '../layouts/BaseLayout.astro';
import EventCard from '../components/EventCard.astro';
import BusinessCard from '../components/BusinessCard.astro';
import ButtondownSignup from '../components/ButtondownSignup.astro';
import { getCollection } from 'astro:content';

const allEvents = await getCollection('events');
const now = new Date();
now.setHours(0, 0, 0, 0);

const upcomingEvents = allEvents
  .filter(event => event.data.date >= now)
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime())
  .slice(0, 3);

const businesses = [
  {
    name: 'Massage Therapy',
    description: 'Professional therapeutic massage services in a relaxing environment.',
    href: '/business/massage',
  },
  {
    name: 'Through the Looking Glass',
    description: 'Handcrafted jewelry and custom designs by local artisans.',
    href: '/business/jewelry',
  },
  {
    name: 'Art Studio',
    description: 'Painting, screenprinting, and creative workshops.',
    href: '/business/art',
  },
];
---

<BaseLayout title="Home">
  <section class="hero">
    <div class="container hero-content">
      <div class="hero-text">
        <h1>Welcome to Engine 43</h1>
        <p class="hero-subtitle">A historic firehouse transformed into a vibrant community venue</p>
        <div class="hero-actions">
          <a href="/events" class="btn">View Events</a>
          <a href="/history" class="btn btn-outline">Our History</a>
        </div>
      </div>
      <div class="hero-image">
        <img src="/images/engine_no.43.png" alt="Engine 43 Firehouse illustration" />
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2 class="section-title">Upcoming Events</h2>
      {upcomingEvents.length > 0 ? (
        <div class="grid grid-2">
          {upcomingEvents.map(event => (
            <EventCard
              title={event.data.title}
              date={event.data.date}
              time={event.data.time}
              description={event.data.description}
              image={event.data.image}
              location={event.data.location}
              slug={event.slug}
            />
          ))}
        </div>
      ) : (
        <p class="text-muted text-center">No upcoming events scheduled. Check back soon!</p>
      )}
      <div class="text-center" style="margin-top: var(--spacing-xl);">
        <a href="/events" class="btn">View All Events</a>
      </div>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <h2 class="section-title">Our Businesses</h2>
      <p class="text-center text-muted" style="margin-bottom: var(--spacing-xl);">
        Discover the talented artisans and professionals who call Engine 43 home.
      </p>
      <div class="grid grid-3">
        {businesses.map(business => (
          <BusinessCard
            name={business.name}
            description={business.description}
            href={business.href}
          />
        ))}
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <ButtondownSignup />
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--color-accent) 0%, #2D3339 100%);
    color: white;
    overflow: hidden;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: stretch;
  }

  .hero-text {
    text-align: left;
    padding: var(--spacing-2xl) 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: var(--spacing-xl);
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    background-image: url('/images/clouds.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-image img {
    max-width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: bottom;
  }

  .btn-outline {
    background-color: rgba(255, 255, 255, 0.15);
    border: 2px solid white;
    color: white;
  }

  .btn-outline:hover {
    background-color: white;
    color: var(--color-primary);
  }

  .section-alt {
    background-color: var(--color-border);
  }

  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-text {
      text-align: center;
      order: 2;
    }

    .hero-image {
      order: 1;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-actions {
      justify-content: center;
    }
  }
</style>
